<div class="px-4 py-10 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">

      <h1 class="text-3xl font-semibold text-gray-900">{{foundWatchlistName}} Watchlist</h1>

      <p class="mt-2 text-md text-gray-700">Displayed crypto information from created watchlist</p>
    </div>
  </div>




  <div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    </div>
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-100">
              <tr>
                <th scope="col" class="whitespace-nowrap py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Ticker
                </th>
                <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left text-sm font-semibold text-gray-900">Name</th>
                <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left text-sm font-semibold text-gray-900">Current Supply</th>
                <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left text-sm font-semibold text-gray-900">Market Cap</th>
                <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left text-sm font-semibold text-gray-900">Price</th>
                 <th scope="col" class="whitespace-nowrap px-2 py-3.5 text-left text-sm font-semibold text-gray-900">Change 24H</th>
              </tr>
            </thead>




            <tbody class="divide-y divide-gray-200 bg-white">

        {{#each charts}}


                <tr>
                <td class="whitespace-nowrap py-2 pl-4 pr-3 text-sm text-gray-500 sm:pl-6">{{symbol}}</td>
                <td class="whitespace-nowrap px-2 py-2 text-sm font-medium text-gray-900">{{name}}</td>
                <td class="whitespace-nowrap px-2 py-2 text-sm text-gray-900">{{supply}} <span class="font-bold">{{symbol}}</span></td>
                <td class="whitespace-nowrap px-2 py-2 text-sm text-gray-500">{{marketCapUsd}}$</td>
                <td class="whitespace-nowrap px-2 py-2 text-sm text-gray-500">{{priceUsd}}$</td>
                <td  class="whitespace-nowrap px-2 py-2 text-sm"><span id="change">{{changePercent24Hr}}</span>%</td> 
                <td class="relative whitespace-nowrap py-2  pr-4 text-right text-sm font-medium sm:pr-6">




              <form action="/watchlist/remove-coin/{{watchId}}/{{id}}" method="post" >
                <button type="submit" class="inline-flex items-center rounded mr-3 border border-transparent bg-black px-2 py-2 text-sm font-sm text-white shadow-sm hover:bg-white hover:border-black hover:text-black focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Remove</button>
         </form>


   


                  

              </tr>








   

                  

             
            {{/each}}
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/dom.js"></script>


</body>